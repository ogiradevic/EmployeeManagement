@using EmployeeManagement.ViewModels
@model EmployeesViewModel

<div>
    <button type="button" class="btn btn-success" style="float:right" onclick="location.href='@Url.Action("NewEmployee", "Employees")'">Add new employee</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Birth date</th>
            <th>Edit employee</th>
            <th>Remove employee</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.AllEmployees is not null)
        {
            foreach (var employee in Model.AllEmployees)
            {
                <tr>
                    <th>@employee.FirstName</th>
                    <th>@employee.LastName</th>
                    <th>@employee.BirthDate.ToString("dd.MM.yyyy.")</th>
                    <th><a asp-controller="Employees" asp-action="UpdateEmployee" asp-route-id="@employee.EmployeeID">Edit</a></th>
                    <th><a asp-controller="Employees" asp-action="RemoveEmployee" asp-route-id="@employee.EmployeeID">Delete</a></th>
                </tr>
            }
        }

    </tbody>
</table>
</div>
