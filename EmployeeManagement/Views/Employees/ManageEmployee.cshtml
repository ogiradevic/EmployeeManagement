@model Employee

<form asp-controller="Employees" asp-action="SaveEmployee" method="post">
  <div class="form-group" style="width:150px">
    <label asp-for="@Model.FirstName">First name</label>
    <input type="text" class="form-control" asp-for="FirstName">
  </div>
  <div class="form-group" style="width:150px">
    <label asp-for="@Model.LastName">Last name</label>
    <input type="text" class="form-control" asp-for="LastName">
  </div>
  <div class="form-group" style="width:150px">
    <label asp-for="@Model.BirthDate">Last name</label>
    <input type="date" class="form-control" asp-for="BirthDate">
  </div>
  <input type="hidden" asp-for="@Model.EmployeeID" />
  <br />
  <button type="submit" class="btn btn-primary">Save</button>
</form>
